{
  "name": "posternode",
  "version": "0.0.0",
  "description": "Project setup by robb-j/ts-node-base",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "coverage": "nyc --reporter=html npm test -s",
    "lint": "npx tslint -p .",
    "mysql": "docker run -it --rm --name dev_mysql -v mysql:/var/lib/mysql -e MYSQL_ROOT_PASSWORD=secret -p 3306:3306 mysql:5.7",
    "preversion": "npm run lint -s && npm test -s && tsc && git add -A dist",
    "prettier": "prettier --write */**/*.{js,ts,json,css,md}",
    "start": "node -r tsconfig-paths/register -r dotenv/config dist",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register 'spec/**/*.ts'",
    "dev": "node -r ts-node/register -r tsconfig-paths/register -r dotenv/config src",
    "watch": "nodemon -w src -e ts -x 'npm run dev -s' -q src/index.ts"
  },
  "author": "robb-j",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "ansi-escapes": "^3.1.0",
    "api-formatter": "^1.0.0",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.1.0",
    "download": "^7.1.0",
    "escape-string-regexp": "^1.0.5",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "jsonwebtoken": "^8.4.0",
    "knex": "^0.16.0",
    "mysql": "^2.16.0",
    "pug": "^2.0.3",
    "tsconfig-paths": "^3.7.0",
    "twilio": "^3.24.0",
    "valid-env": "^0.1.2"
  },
  "devDependencies": {
    "@types/ansi-escapes": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.7",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/download": "^6.2.3",
    "@types/escape-string-regexp": "^1.0.0",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "0.0.40",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/knex": "^0.15.1",
    "@types/mocha": "^5.2.5",
    "@types/mysql": "^2.15.5",
    "@types/node": "^10.12.10",
    "chai": "^4.2.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7",
    "nyc": "^13.1.0",
    "prettier": "1.15.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  }
}
